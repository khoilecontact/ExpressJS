extends ../layout/common

block content
    h1 Create user 

    if errors
        each error in errors
            .alert.alert-danger(role='alert')=error 

    form(aciton="/users/create", method="POST", enctype="multipart/form-data")

        .form-group 
            label(for="username") User name
            input#username.form-control(name="username", type="text", value = value ? value.username : "")

        .form-group 
            label(for="password") Password 
            input#password.form-control(name="password", type="text", value = value ? value.password : "")

        .form-group 
            label(for="name") Name 
            input#name.form-control(name="name", type="text", value = value ? value.name : "")

        .form-group 
            label(for="phone") Phone 
            input#phone.form-control(name="phone", type="text", value = value ? value.phone : "")

        
        .form-group 
            label(for="country") Country 
            input#country.form-control(name="country", type="text", value = value ? value.country : "")

        .form-group 
            label(for="avatar") Avatar 
            input#avatar.form-control-file(name="avatar", type="file")

        button.btn.btn-primary Create 