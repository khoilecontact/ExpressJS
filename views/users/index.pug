extends ../layout/common

block content
  h1 Users 

  a(href='/users/create') New User

  form(action="/users/search", method="GET", class="d-flex")
    input(type="text", name="q",class="form-control")
    button(class="btn btn-dark mb-3") Search

  ul 
   each user in users 
     li
      span=user.name
      span &nbsp; <!-- a space -->
     a(href='/users/' + user.id) View