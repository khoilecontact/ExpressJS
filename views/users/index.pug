extends ../layout/common

block content
  h1 
   span.mr-auto Users
    a.btn.btn-primary(href='/users/create') New User
  
  .d-flex.align-items-center
   
    form.ml-auto(action="/users/search", method="GET", class="d-flex")
      input(type="text", name="q",class="form-control")
      button(class="btn btn-primary ml-2") Search

  table.table
    tr 
      th Name 
      th Avatar
      th Phone 
      th Country 
      th Action

    each user in users 
     tr
      td=user.name
      td
        img(src=user.avatar, width=60)
      td=user.phone 
      td=user.country
      td
        a.btn.btn-light(href='/users/' + user.id) View