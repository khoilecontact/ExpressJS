extends ./layout/common 


block content 
    h1 Products
        .row 
            each product in products 
                .card(style='width: 18rem;')
                    img.card-img-top(src=product.image)
                    .card-body
                        h5.card-title product.name
                        p.card-text product.description 
                        a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart



    nav(aria-label='Page navigation example')
        ul.pagination.justify-content-center
            li.page-item.disabled
                a.page-link(href='/products?page=page-1', tabindex='-1', aria-disabled='true') Previous
            li.page-item
                a.page-link(href='/products?page=1') 1
            li.page-item
                a.page-link(href='/products?page=2') 2
            li.page-item
                a.page-link(href='/products?page=3') 3
            li.page-item
                a.page-link(href='/products?page=page+1') Next
                

        